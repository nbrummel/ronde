%html
	%head
		%title rondÃ©
		= stylesheet_link_tag 'events'
		= javascript_include_tag 'application'
		= csrf_meta_tags

	%body
		%h2.title Create New Event 
		= form_for(Event.new, html: { class: 'form-horizontal' }) do |f|
			%fieldset
				%legend
					.field.control-group
						= f.label :day
						.controls
							= w.select "day_of_the_week", [["Monday","day_label_1"], ["Tuesday","day_label_2"]]
					.field.control-group
						= f.label :name
						.controls
							.input-group
								= f.text_field :name,:placeholder => "Name: 'John Smith'"
					.field.control-group
					= f.label :description
					.controls
						.input-group
							= f.text_area :description, rows: 3, :placeholder => "Provide a detailed description of the event here"
					.field.control-group
					= f.label :event_type
					.controls= f.collection_select :event_type, Event::EVENT_OPTIONS, :to_s, :humanize, prompt: true
					.field.control-group
						= f.label :location
						.controls
							.input-group
								= f.text_field :location,:placeholder => "Location: 'The stix'"
					.field.control-group
						= f.label :start
						.controls.datetime
							= f.datetime_select :start, :discard_month => true, :discard_year => true, :ampm => true ,  :minute_step =>15
					.field.control-group
						= f.label :end
						.controls.datetime
							= f.datetime_select :end, :discard_month => true, :discard_year => true, :ampm => true ,  :minute_step => 15
				.actions.well
				= f.submit class: 'btn btn-large btn-success'
					
							
