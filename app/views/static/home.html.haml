%html
  %head
    %title rondé
    = stylesheet_link_tag 'homepage'
    = javascript_include_tag 'homepage'
    = csrf_meta_tags

  %body
    %h1.title rondé
    #main
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]

      = yield

  %table#buttons
    %th{:class => "button"}= link_to 'Sign In', new_user_session_path, :class => "button", :id => "sign_in_button"
    %th{:class => "button"}= link_to 'Sign Up', new_user_registration_path, :class => "button", :id => "sign_up_button"

  %div#bottom_div
    %table#bottom_links
      %th{:class => "bottom_link"}= link_to 'Home', '/static/home', :class => "bottom_link", :id => "home_link"
      %th{:class => "bottom_link"}= link_to 'About', '/static/about', :class => "bottom_link", :id => "about_link"
      %th{:class => "bottom_link"}= link_to 'Terms of Use', '/static/terms_of_use', :class => "bottom_link", :id => "terms_of_use_link"
      %th{:class => "bottom_link"}= link_to 'Contact', '/static/contact', :class => "bottom_link", :id => "contact_link"

