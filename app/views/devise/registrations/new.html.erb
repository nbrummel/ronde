<body>
  <%= render "static/header" %>
  <center>
    <div class="container">
      <div class="well span5" style="position:relative; left:24%;">
        <h2>Sign up</h2>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div>
          <%= f.email_field :email, :autofocus => true, :placeholder => 'Email'%></div>
          <div>
          <%= f.text_field :first_name, :placeholder => 'First name' %></div>
          <div>
          <%= f.text_field :last_name, :placeholder => 'Last name' %></div>
          <div>
          <%= f.text_field :phone_number, :placeholder => 'Phone number' %></div>
          <div>
          <%= f.password_field :password, :placeholder => 'Password'%></div>
          <div>
          <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password' %></div>

          <div><%= f.submit "Sign up", :class => 'btn btn-default' %></div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
  <%= render "static/footer" %>
</body>
